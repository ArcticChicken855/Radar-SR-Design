macro(set_version PREFIX version)
    string(REPLACE "." ";" VERSION_LIST "${version}")
    string(REPLACE "-" ";" VERSION_LIST "${VERSION_LIST}")
    list(APPEND VERSION_LIST "0")

    list(GET VERSION_LIST 0 ${PREFIX}_VERSION_MAJOR)
    list(GET VERSION_LIST 1 ${PREFIX}_VERSION_MINOR)
    list(GET VERSION_LIST 2 ${PREFIX}_VERSION_PATCH)
    list(GET VERSION_LIST 3 ${PREFIX}_VERSION_BUILD)

    set(${PREFIX}_VERSION_DEFINES
        ${PREFIX}_VERSION_MAJOR=${${PREFIX}_VERSION_MAJOR}
        ${PREFIX}_VERSION_MINOR=${${PREFIX}_VERSION_MINOR}
        ${PREFIX}_VERSION_PATCH=${${PREFIX}_VERSION_PATCH}
        ${PREFIX}_VERSION_BUILD=${${PREFIX}_VERSION_BUILD}
        )
endmacro()
